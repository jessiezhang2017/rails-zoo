<% if @animal.nil? %>
  <h1> 404 Not found</h1>
<% else %>
  <h1><%=@animal.name %></h1>
  <p> species: <%= @animal.species %> </p>
  <p> age: <%= @animal.age %> </p>
  <p><%=link_to "Edit", edit_animal_path(@animal.id)%></p>
  <p><%=link_to "Delete", animal_path(@animal.id), method: :delete , data: {confirm: "Are you sure?"}%></p>
<% end %>
